<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleX="1"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/lblSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_corners"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Settings"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spTheme"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="258dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/main_color_1"
            android:contentDescription="Theme" />

        <Switch
            android:id="@+id/swGoalEditing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:switchPadding="40dp"
            android:text="Allow Goal Editing"
            android:textColor="@color/main_color_1"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/swHistoryEditing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:switchPadding="18dp"
            android:text="Allow History Editing"
            android:textColor="@color/main_color_1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnRemoveHistory"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="36dp"
            android:paddingRight="36dp"
            android:text="Remove All History"
            android:textColor="#F44336"
            android:textSize="20sp"
            app:strokeColor="#F44336" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>